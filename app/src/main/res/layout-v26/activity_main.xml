<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a0d0d"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header Section -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/jokermask"
            android:contentDescription="Phantom Thief Mask"
            app:tint="#dc143c" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome back, Phantom Thief!\nJoker believes in you!"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today: Monday, January 01, 2024"
            android:textSize="14sp"
            android:textColor="#b0b0b0"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#dc143c"
            android:layout_marginBottom="16dp" />

        <!-- Task Input Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 TODAY'S AGENDA"
            android:textSize="16sp"
            android:textColor="#dc143c"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/taskInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your next move..."
            android:textColorHint="#888888"
            android:textColor="#ffffff"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:maxLines="2"
            android:inputType="textMultiLine|textCapSentences" />

        <Button
            android:id="@+id/btnAddTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD TO AGENDA"
            android:textColor="#ffffff"
            android:background="@drawable/button_primary"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:padding="12dp" />

        <!-- Task List Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚡ CURRENT TASKS"
            android:textSize="16sp"
            android:textColor="#dc143c"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="12dp" />

        <ListView
            android:id="@+id/taskList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/list_background"
            android:padding="8dp"
            android:divider="#333333"
            android:dividerHeight="1dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Long press any task to mark it as complete"
            android:textSize="12sp"
            android:textColor="#888888"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:fontStyle="italic" />

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="⚙️ SETTINGS"
                android:textColor="#ffffff"
                android:background="@drawable/button_secondary"
                android:layout_marginEnd="6dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/btnStats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📊 STATS"
                android:textColor="#ffffff"
                android:background="@drawable/button_secondary"
                android:layout_marginStart="6dp"
                android:padding="10dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ℹ️ ABOUT"
            android:textColor="#ffffff"
            android:background="@drawable/button_info"
            android:padding="10dp" />

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show them your true form! - Arsène"
        android:textSize="10sp"
        android:textColor="#666666"
        android:textAlignment="center"
        android:fontStyle="italic"
        android:layout_marginTop="20dp" />

    </LinearLayout>

</ScrollView>